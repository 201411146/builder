<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.company.mappers.people.peopleMemberMapper">

	<!-- 회원 가입 -->
	<insert id="register" parameterType="hashMap">
		insert into ${sitename}(userid, userpass)
		values(#{userid}, #{userpass})
	</insert>

	<!-- 로그인 -->
	<select id="login" resultType="com.company.dto.PeopleMemberDTO" parameterType="hashMap">
		select
		*
		from
		${sitename}
		where userid = #{userid}
		and userpass = #{userpass}
	</select>
	
	<!-- 회원정보수정 get -->
	<select id="getModify" resultType="com.company.dto.PeopleMemberDTO" parameterType="hashMap">
		select
		*
		from
		${sitename}
		where userno = #{userno}
	</select>
	
	<!-- 회원정보수정 post -->
	<update id="postModify" parameterType="hashMap">
		update ${sitename}
		set
		userid = #{userid},
		userpass = #{userpass}
		where 
		userno = #{userno}
	</update>
</mapper>